{
  "name": "@app/main",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "gen:proto": "protoc --ts_proto_out=src/protos --ts_proto_opt=esModuleInterop=true --ts_proto_opt=importSuffix=.js --proto_path=src/protos src/protos/vega.proto"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/**",
    "package.json",
    "certs/**"
  ],
  "dependencies": {
    "@app/preload": "*",
    "@app/renderer": "*",
    "@bufbuild/protobuf": "^2.2.5",
    "electron-auto-launch": "^5.0.7",
    "electron-store": "^10.0.1",
    "electron-updater": "6.6.2",
    "mqtt": "^5.11.0",
    "officeparser": "^5.1.1",
    "unpdf": "^0.12.1"
  },
  "devDependencies": {
    "@app/electron-versions": "*",
    "electron-devtools-installer": "3.2.0",
    "ts-proto": "^2.7.0",
    "typescript": "5.8.3",
    "vite": "6.3.2",
    "vite-plugin-static-copy": "latest"
  }
}
